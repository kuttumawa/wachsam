<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="ehcache.xsd" 
	updateCheck="true"
	monitoring="autodetect" 
	dynamicConfig="true">

	<sizeOfPolicy maxDepth="2000" maxDepthExceededBehavior="abort"/>
    <defaultCache eternal="true" overflowToDisk="false"/>

    <cache name="ioCache" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" />
    <cache name="ioCacheAlertas" maxElementsInMemory="10000" eternal="true" overflowToDisk="false" />
    <cache name="ioCacheLugar" maxElementsInMemory="1000" eternal="true" overflowToDisk="false" />
    <cache name="ioCachePeligro" maxElementsInMemory="1000" eternal="true" overflowToDisk="false" />
    <cache name="ioCacheSitio" maxElementsInMemory="1000" eternal="true" overflowToDisk="false" />
</ehcache>